{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "enabledManagers": ["github-actions"],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/[^/]+\\.ya?ml$"],
      "matchStrings": [
        "uses:\\s*FirelyTeam/firely-terminal-pipeline@v(?<currentValue>[0-9.]+)"
      ],
      "depNameTemplate": "FirelyTeam/firely-terminal-pipeline",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": ["\\.sh$"],
      "matchStrings": [
        "BLAZECTL_VERSION=\"(?<currentValue>[0-9.]+)\""
      ],
      "depNameTemplate": "samply/blazectl",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": ["\\.sh$"],
      "matchStrings": [
        "MII_TESTDATA_VERSION=\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "medizininformatik-initiative/mii-testdata",
      "datasourceTemplate": "github-releases"
    }
  ]
}
